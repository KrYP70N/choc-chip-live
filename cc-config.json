{
  "port" : "8080",
  "output" : "dist",
  "html" : {
    "lang" : "pug",
    "watch" : "./src/templates/**/*.pug",
    "dist" : "",
    "minify" : false,
    "validate" : false
  },
  "css" : {
    "lang" : "scss",
    "watch" : "./src/style/**/*.scss",
    "dist" : "style",
    "minify" : false,
    "validate" : false
  },
  "js" : {
    "lang" : "babel",
    "watch" : "./src/script/**/*.babel",
    "dist" : "js",
    "minify" : false,
    "validate" : false
  },
  "media" : {
    "watch" : "./src/assets/**/*",
    "dist" : "assets"
  },
  "plugin" : {
    "dist" : "plugin",
    "minify" : true,
    "beautify" : false,
    "split mode" : false,
    "list" : [
      {
        "name" : "jquery",
        "js" : "dist/jquery.min.js"
      },
      {
        "name" : "popper.js",
        "js" : "dist/umd/popper.js"
      },
      {
        "name" : "bootstrap",
        "css" : "dist/css/bootstrap.css",
        "js" : "dist/js/bootstrap.js"
      }
    ]
  }
}